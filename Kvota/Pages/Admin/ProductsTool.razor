@page "/admin/product"
@attribute [Authorize(Roles = "Administrators")]
@using Kvota.Models.Products
@using Kvota.Interfaces
@using Kvota.Components.Admin
@inject IRepo<Product> ProductRepo
@inject IServiceScopeFactory ServiceScopeFactory
@inject IWebHostEnvironment Env
@using Kvota.Components
<NavAdmin></NavAdmin>
<div class="row">
        <div class="col-lg-3 text-right">
            <a class="btn btn-success btn-sm" href="/admin/product/create" role="button">Создать продукт</a>
        </div>
    </div>
     
@if (_pagedList != null && _pagedList.Any())
{
    <ProductFilterComponent Products="Products"  ProductListCallback="GetList"></ProductFilterComponent>

    <table class="table table-bordered table-striped table-sm">
        <thead>
        <tr>
            <th></th>
            <th>Имя</th>
            <th>Парт-номер</th>
            <th>Бренд</th>
            <th>Категория</th>
            <th>Подкатегория</th>
            <th>Описание</th>
            <th>Цена</th>
            <th>Скидка</th>
            <th>Количество</th>
            <th>Дата создания</th>
            <th>Дата обновления</th>
            <th></th>
        </tr>
        </thead>
        <tbody>
        @foreach (var item in _pagedList)
        {
            <tr>
                <td> <img src="@item.Image" width="100"> </td>
                <td>@item.Name</td>
                <td>@item.PartNumber</td>
                <td>
                    @if (item.Brand != null) {@item.Brand.Name}
                </td>
                <td>
                    @if (item.Category?.GrandCategory != null) {@item.Category.GrandCategory.Name}
                </td>
                <td>
                    @if (item.Category != null) {@item.Category.Name}
                </td>
                <td>@item.Description</td>
                <td>@item.Price</td>
                <td>@item.SalePrice</td>
                <td>@item.Quantity</td>
                <td>@item.DateTimeCreated</td>
                <td>@item.DateTimeUpdated</td>


                <td class="text-right">
                    <a class="btn btn-primary btn-sm" href="/admin/prodoptions/@item.Name/@item.CategoryId/@item.Id" role="button">Опции</a>
                    <a class="btn btn-secondary btn-sm" href="/admin/product/edit/@item.Id" role="button">Edit</a>
                    <button class="btn btn-danger btn-sm" @onclick="@(e => DeleteProduct(item.Id, item.Image!))" role="button">Delete</button>
                </td>
            </tr>
        }
        </tbody>
    </table>
