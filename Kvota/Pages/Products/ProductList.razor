
@inject IServiceScopeFactory serviceScopeFactory

<div class="productlist">
    <div class="productlist__products">
        @foreach (var items in Products)
        {
            <div class="productlist__product product">
                <div class="product__body">
                    <p class="product__name">@items.Name</p>
                    <p class="product__brand">@items.Brand</p>
                    <p class="product__pnumber">@items.PartNumber</p>
                </div>
                <div class="product__image">
                    <img class="" src="image/products/@items.Name)@jpg"/>
                </div>
                <div class="product__prices">
                    <p class="product__price">@items.Price</p>
                    <p class="product__sale">@items.SalePrice</p>
                    <div class="product__feetback">feeeet</div>
                </div>
                <div class="product__quantity">@items.Quantity</div>

            </div>

        }
        
    </div>
</div>

@code {
    string jpg = ".jpg";
}
