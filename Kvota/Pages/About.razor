@page "/about"
@using Kvota.Models.Content
@using Kvota.Interfaces
@inject IRepo<Home> HomeServ


<PageTitle>О компании</PageTitle>

@if ( Content!= null){
<div class="about_body">
    <h1 class="about_title">Компания Квота</h1>
    <div class="about_row">
        <div class="about_image1"></div>
        <p class="about_text">@Content.AboutText </p>
            <div class="about_image2"></div>
    </div>
    
</div>
}





@code
{

    private Home? Content { get; set; }

    protected override async Task OnInitializedAsync()
    {
        Content = await HomeServ.GetOneAsync(new Guid("7c7ed7ca-fda1-4449-8637-c403c61957eb"));
    }
}

